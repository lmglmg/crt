background #000000

camera {
    pos 0,0,-100
    look_at 0,0,0
    up 0,-1,0
    focus 400
    dim 800x600
}

sphere {
    pos 0,0,0
    radius 10
    material {
        color #5566FF
        diffuse 3
    }
}

plane {
    pos 0,-10,0
    normal 0,1,0
    material {
        color #5566FF
        diffuse 3
    }
}


light {
    pos -20,0,0
    color #aa1111
}
